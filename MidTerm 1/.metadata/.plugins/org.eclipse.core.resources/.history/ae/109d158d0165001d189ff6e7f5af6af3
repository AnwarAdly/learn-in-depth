#include <stdio.h>
#include <string.h>

void revStr (char x[]);

void main (){
	char str[100]="Anwar Adly";
	printf("The entered string : Anwar Adly");
	revStr(str);
}

void revStr (char x[]){
	char rev[100];
	int i,j;
	for (i=strlen(x);i>=0;i--){
		if (x[i]=' '){
			for (j=0;j<=strlen(x),x[i]!='\0';j++,i++){
				rev[j]=x[i+1];
			}
		}
	}
	printf("\nThe reversed string : ");
	for(i=0;i<=strlen(x);i++){
		printf("%s",rev[i]);
	}
}
