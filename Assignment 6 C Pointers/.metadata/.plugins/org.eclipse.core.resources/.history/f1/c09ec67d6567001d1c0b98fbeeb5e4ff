#include <stdio.h>
#include <string.h>

void main(){
	char str[20],*rev;
	char *ptr = str;
	int i;
	printf("The entered is : ");
	fflush(stdout);
	gets(ptr);
	printf("The reversed is : ");
	for(i=strlen(ptr);i>=0;i--){
		ptr--;
		rev=ptr;
		rev++;
	}
	printf("%c",*rev);
}
