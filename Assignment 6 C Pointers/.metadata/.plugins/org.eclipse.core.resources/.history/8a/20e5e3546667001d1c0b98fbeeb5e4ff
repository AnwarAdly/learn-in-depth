#include <stdio.h>
#include <string.h>

void main(){
	char str[20],rev[20];
	char *ptr = str;
	char *r = rev;
	int i;
	printf("The entered is : ");
	fflush(stdout);
	gets(str);
	ptr=str;
	printf("The reversed is : ");
	for(i=strlen(str);i>=0;i--){
		ptr--;
		*r=*ptr;
		r++;
	}
	*r='\0';
	printf("%c",*r);
}
